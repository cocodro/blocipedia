<h2>Edit Wiki</h2>
  <div class="row">
    <div class='col-md-8'>
      <%= form_for @wiki do |f| %>
        <div class="form-group">
          <%= f.label :title %><br />
          <%= f.text_field :title, autofocus: true, class: 'form-control', maxlength:25, placeholder: "Edit Wiki Name" %>
        </div>
        <div class="form-group">
          <%= f.label :body %><br />
          <%= f.text_field :body, autofocus: true, class: 'form-control', placeholder: "Edit Wiki Description" %>
        </div>
        <div class="form-group">
          <%= f.submit "Save", class: 'btn btn-success' %>
        </div>
        <% if current_user.admin? || current_user.premium? %>
          <div class="form-group">
            <%= f.label :private, class: 'checkbox' %>
            <%= f.check_box :private %> Private wiki?
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
<h2>Edit Sections</h2>
  <% @sections.each do |section| %>
    <%= render partial: 'sections/form', locals: {section: section} %>
  <% end %>
